{
    "name": "@madebymondo/mondo",
    "version": "0.0.1-beta",
    "author": "@madebymondo",
    "license": "MIT",
    "description": "Mondo is hybrid web framework built with Typescript created by Made By Mondo to produce high quality digital products.",
    "type": "module",
    "bin": {
        "mondo": "./dist/cli.js"
    },
    "exports": {
        ".": {
            "import": {
                "types": "./src/types/mondo.d.ts",
                "default": "./dist/core.js"
            }
        }
    },
    "types": "./src/types/mondo.d.ts",
    "main": "./dist/core.js",
    "files": [
        "./dist/**/*.js",
        "./src/types/mondo.d.ts",
        "./README.md"
    ],
    "scripts": {
        "test": "npx jest",
        "build": "rm -rf dist && tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
        "launch": "npm run test && npm run build",
        "dev": "tsc --project tsconfig.build.json && (concurrently \"tsc --project tsconfig.build.json  -w\" \"tsc-alias --project tsconfig.build.json -w\")",
        "pack": "npm pack --dry-run",
        "release": "npm run build && npm publish --access public"
    },
    "engines": {
        "node": ">=18.16.0"
    },
    "dependencies": {
        "@types/nunjucks": "^3.2.3",
        "browser-sync": "^2.29.3",
        "chalk": "*",
        "commander": "*",
        "dotenv": "*",
        "esbuild": "*",
        "express": "^4.18.2",
        "browser-sync": "^2.29.3",
        "typescript": "*",
        "fs-extra": "*",
        "nunjucks": "^3.2.4",
        "tsc-alias": "^1.8.7",
        "typescript": "*"
    },
    "devDependencies": {
        "@babel/preset-env": "*",
        "@babel/preset-typescript": "*",
        "@types/express": "^4.17.17",
        "@types/fs-extra": "^11.0.1",
        "@types/jest": "*",
        "babel-plugin-dynamic-import-node": "*",
        "jest": "*",
        "memfs": "*",
        "ts-jest": "*"
    }
}
